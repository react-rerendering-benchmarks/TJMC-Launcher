{
  "name": "tjmc-launcher",
  "version": "0.0.8",
  "description": "An ElectronJS version if TJM-Launcher",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --publish never",
    "build:win": "npm run build -- -w",
    "build:mac": "npm run build -- -m",
    "build:linux": "npm run build -- -l",
    "deploy": "electron-builder build --publish always",
    "deploy:win": "npm run deploy -- -w"
  },
  "keywords": [
    "Minecraft",
    "Launcher",
    "TJMCRAFT",
    "TJMC",
    "TJMC-Launcher",
    "ТюменьCraft"
  ],
  "author": "MakAndJo",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/MakAndJo/TJMC-Launcher.git"
  },
  "dependencies": {
    "@electron/remote": "^1.2.0",
    "adm-zip": "^0.5.1",
    "electron-updater": "^4.3.9",
    "express": "^4.17.1",
    "fs-extra": "^9.1.0",
    "request": "^2.88.2",
    "ws": "^7.5.1",
    "dotenv": "^9.0.2"
  },
  "devDependencies": {
    "electron": "^13.1.5",
    "electron-builder": "^22.11.7"
  }
}
