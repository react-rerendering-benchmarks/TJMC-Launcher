{
  "name": "tjmc-launcher",
  "version": "0.2.4",
  "description": "An lightweight minecraft launcher by TJMC",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron . --trace-warnings --unhandled-rejections=strict",
    "build": "electron-builder build --publish never",
    "build:win": "npm run build -- -w",
    "build:mac": "npm run build -- -m",
    "build:linux": "npm run build -- -l",
    "build:linux-snap": "electron-builder --linux snap",
    "build:multi": "npm run build -- -mwl",
    "serve-render:dev": "cross-env NODE_ENV=development webpack serve --mode development",
    "watch-render:dev": "cross-env NODE_ENV=development webpack --mode development --watch --stats-error-details",
    "build-render:dev": "cross-env NODE_ENV=development webpack --mode development --stats-error-details",
    "build-render:prod": "cross-env NODE_ENV=production webpack --mode production",
    "deploy": "electron-builder build --publish always",
    "deploy:win": "npm run deploy -- -w",
    "deploy:mac": "npm run deploy -- -m",
    "deploy:linux": "npm run deploy -- -l",
    "deploy:linux-snap": "electron-builder --linux snap --publish always",
    "deploy:multi": "npm run deploy -- -mwl"
  },
  "keywords": [
    "Minecraft",
    "Launcher",
    "TJMCRAFT",
    "TJMC",
    "TJMC-Launcher",
    "ТюменьCraft"
  ],
  "author": "MakAndJo <makandjo@outlook.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tjmcraft/TJMC-Launcher.git"
  },
  "dependencies": {
    "@electron/remote": "^2.0.9",
    "adm-zip": "^0.5.1",
    "cross-env": "^7.0.3",
    "electron-log": "^5.0.1",
    "electron-updater": "^4.6.5",
    "fs-extra": "^9.1.0",
    "got": "^11.8.3",
    "keytar": "^7.9.0",
    "md5": "^2.3.0",
    "ws": "^7.5.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.14.8",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/plugin-transform-react-jsx": "^7.14.5",
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@prefresh/webpack": "^4.0.0",
    "@svgr/webpack": "^6.2.1",
    "@tjmcraft/greentree": "^0.0.67",
    "@types/node": "^20.10.7",
    "@types/webpack-env": "^1.18.1",
    "@typescript-eslint/parser": "^6.18.0",
    "babel-loader": "^8.2.2",
    "body-parser": "^1.20.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "copy-webpack-plugin": "^9.0.1",
    "cors": "^2.8.5",
    "css-loader": "^6.3.0",
    "electron": "^23.1.4",
    "electron-builder": "^24.0.0",
    "electron-reload": "^2.0.0-alpha.1",
    "eslint": "^8.32.0",
    "eslint-config-preact": "^1.3.0",
    "eslint-plugin-react": "^7.32.2",
    "express-mysql-session": "^2.1.8",
    "express-session": "^1.17.3",
    "filemanager-webpack-plugin": "^7.0.0",
    "html-webpack-plugin": "^5.3.2",
    "jest": "^29.4.1",
    "mini-css-extract-plugin": "^2.3.0",
    "mysql2": "^2.3.3",
    "platform": "^1.3.6",
    "preact": "^10.19.2",
    "react": "npm:@preact/compat",
    "react-dom": "npm:@preact/compat",
    "react-markdown": "^8.0.5",
    "remark-gfm": "^3.0.1",
    "source-map": "^0.7.4",
    "style-loader": "^3.3.0",
    "svg-inline-loader": "^0.8.2",
    "svg-url-loader": "^7.1.1",
    "terser-webpack-plugin": "^5.2.4",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.15.1",
    "webpack-plugin-buildinfo": "^0.3.1"
  },
  "build": {
    "appId": "com.github.makandjo.tjmc.app.launcher",
    "productName": "TJMC-Launcher",
    "copyright": "Copyright © 2020-2023 MakAndJo",
    "artifactName": "${productName}-setup-${arch}.${ext}",
    "publish": {
      "provider": "github",
      "releaseType": "draft",
      "channel": "latest"
    },
    "protocols": [
      {
        "name": "tjmc-protocol",
        "schemes": [
          "tjmc"
        ]
      }
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "!src/render/**/*",
      "!{dist,.gitignore,.vscode,docs,dev-app-update.yml,.travis.yml,.nvmrc,.eslintrc.json,build.js,webpack.config.js,.babelrc,build}",
      {
        "from": "src/render/dist",
        "to": "src/render/dist"
      }
    ],
    "asar": true,
    "compression": "maximum",
    "icon": "icons/icon.png",
    "nodeGypRebuild": false,
    "npmRebuild": true,
    "mac": {
      "category": "public.app-category.games",
      "icon": "icons/icon.icns",
      "darkModeSupport": true,
      "target": [
        {
          "target": "default",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "asarUnpack": [
        "**/*.node"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.inherit.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ],
      "publisherName": ["MakAndJo"],
      "icon": "icons/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "synopsis": "TJMC-Launcher",
      "executableName": "tjmc-launcher",
      "desktop": {
        "Name": "TJMC-Launcher",
        "Type": "Application",
        "StartupNotify": true,
        "Categories": "Game",
        "Encoding": "UTF-8",
        "MimeType": "x-scheme-handler/tjmc"
      },
      "icon": "build/icons"
    },
    "deb": {
      "compression": "gz"
    },
    "snap": {
      "publish": {
        "provider": "snapStore",
        "channels": [
          "stable"
        ]
      },
      "confinement": "classic",
      "grade": "stable",
      "plugs": [
        "desktop",
        "desktop-legacy",
        "home",
        "x11",
        "wayland",
        "unity7",
        "browser-support",
        "network",
        "gsettings",
        "audio-playback",
        "pulseaudio",
        "opengl",
        "password-manager-service"
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": false
    },
    "dmg": {
      "sign": false
    }
  }
}
